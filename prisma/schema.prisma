generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database.db"
}

model Exercise {
  id                  Int      @id @default(autoincrement())
  question            String
  correctAnswer       String
  imageUrl            String?
  numOfTimesCompleted Int      @default(0)
  createdAt           DateTime @default(now())
}

model PlayTime {
  id              Int      @id @default(autoincrement())
  durationMinutes Int
  createdAt       DateTime @default(now())
}
